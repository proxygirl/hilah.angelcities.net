@charset "UTF-8";body,h1,h2,h3,ul,p{margin:0}ul{list-style:none;padding:0}:root{--padding:1.5em}::selection{background:#ffb7b7}html{display:flex;flex-flow:row nowrap;align-items:start;justify-content:normal;flex:initial;font-family:times new roman,Times,serif}body{display:flex;flex-flow:column nowrap;align-items:normal;justify-content:normal;flex:1;min-height:100vh;max-width:786px}.wrapper{display:flex;flex-flow:row wrap;align-items:normal;justify-content:normal;flex:1}main,aside{padding:var(--padding)}aside{flex:0 185px;border:1px solid #d3d3d3}main{display:flex;flex-flow:column nowrap;align-items:normal;justify-content:normal;flex:initial;flex:1 300px;gap:1.5em}.nav{position:fixed;display:flex;flex-flow:column nowrap;align-items:normal;justify-content:normal;flex:initial;gap:.5em}.nav a{color:blue}.nav-brand h1{font-size:1.3em;font-weight:400}.menu-wrapper{gap:1em;display:flex;flex-direction:column;border-top:1px solid lightgrey;padding-top:1em}@media(max-width:600px){.wrapper{flex-direction:column;flex:initial}main,aside{flex:1}.nav{position:initial}.menu-wrapper{flex-direction:row}}.menu-item{list-style:"❀";color:blue;list-style-position:inside}.menu-item:has(.current){list-style:"✿";list-style-position:inside}.menu.socials .menu-item{list-style:"๑";color:blue;list-style-position:inside}.project{display:grid;grid-template-columns:repeat(auto-fit,minmax(125px,1fr));gap:1em}.project img{width:100%;height:auto}.post{display:flex;flex-flow:column nowrap;align-items:normal;justify-content:normal;flex:initial;gap:1em}.post-header{display:flex;flex-flow:column-reverse nowrap;align-items:normal;justify-content:normal;flex:1;gap:.5em;border-bottom:1px solid lightgrey;padding-bottom:.25em}.post-date{text-transform:lowercase;color:grey}.rich-text{display:flex;flex-flow:column nowrap;align-items:normal;justify-content:normal;flex:1;gap:1em}.rich-text p:has(img){display:flex;flex-flow:column nowrap;align-items:center;justify-content:normal;flex:initial;padding:.75em;border:1px solid #d3d3d3}.rich-text img{width:100%}