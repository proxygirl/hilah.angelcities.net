@charset "UTF-8";body,h1,h2,h3,ul,p{margin:0}ul{list-style:none;padding:0}html{display:flex;flex-flow:row nowrap;align-items:start;justify-content:normal;flex:initial;scroll-behavior:smooth}body{display:flex;flex-flow:column nowrap;align-items:normal;justify-content:normal;flex:1;min-height:100vh;max-width:986px;background-attachment:fixed}.wrapper{flex:1;display:grid;grid-template-columns:1fr 3fr;grid-template-areas:"aside main"}.nav-wrapper{position:fixed;display:flex;flex-direction:column}@media(max-width:800px){.wrapper{display:flex;flex-direction:column}.nav-wrapper{position:initial}}aside{background-color:#fff;border:1px solid #d3d3d3;padding:1.5em;grid-area:aside}header{display:flex;flex-flow:column nowrap;align-items:normal;justify-content:normal;flex:1;gap:.5em}main{padding:1.5em;grid-area:main}.project{display:grid;grid-template-columns:repeat(auto-fit,minmax(175px,1fr));gap:1em}.project img{width:100%;height:auto}nav>ul li{list-style:"‚ùÄ";color:blue;list-style-position:inside}.current{font-weight:700}.details{display:flex;flex-flow:column nowrap;align-items:normal;justify-content:normal;flex:1}.posts{display:flex;flex-flow:column nowrap;align-items:normal;justify-content:normal;flex:1;gap:1em}.post{display:flex;flex-flow:column nowrap;align-items:normal;justify-content:normal;flex:1;max-width:400px;gap:1em;padding:1em;border:1px solid lightgrey}.post-header{display:flex;flex-flow:row nowrap;align-items:center;justify-content:space-between;flex:1;border-bottom:1px solid lightgrey;padding-bottom:.25em}.post-main{display:flex;flex-flow:column nowrap;align-items:normal;justify-content:normal;flex:1;gap:1em}